{
  "name": "rise-wallet",
  "version": "0.1.0",
  "private": true,
  "engines": {
    "yarn": "^1.10.1"
  },
  "dependencies": {
    "@ledgerhq/hw-transport-u2f": "^4.21.0",
    "@material-ui/core": "^v3.3.1",
    "@material-ui/icons": "^3.0.1",
    "@types/moment": "^2.13.0",
    "bip39": "^2.5.0",
    "classnames": "^2.2.6",
    "delay": "^4.1.0",
    "downshift": "^2.2.0",
    "dpos-api-wrapper": "^1.3.2",
    "dpos-ledger-api": "^1.1.0",
    "dpos-offline": "^1.6.0",
    "isomorphic-fetch": "^2.2.1",
    "jdenticon": "^2.1.0",
    "lodash": "^4.17.11",
    "mdi-material-ui": "^5.6.0",
    "mobx": "^5.5.2",
    "mobx-react": "^5.3.5",
    "mobx-router-rise": "^0.0.13",
    "moment": "^2.22.2",
    "query-string": "^6.2.0",
    "react": "^16.6.0",
    "react-dom": "^16.6.0",
    "react-helmet": "^5.2.0",
    "react-intl": "^2.7.2",
    "react-scripts-ts": "3.1.0",
    "risejs": "^1.4.1",
    "sinon": "^7.1.0",
    "store": "^2.0.12",
    "svg-country-flags": "^1.2.6",
    "ts-jest": "^23.10.4",
    "unique-random": "^2.0.0"
  },
  "homepage": "https://risevision.github.io/rise-react-wallet",
  "scripts": {
    "start": "react-scripts-ts start",
    "build": "npm te3.1.0react-scripts-ts build",
    "build-no-tests": "react-scripts-ts build",
    "deploy-nightly": "npm run build-no-tests && gh-pages -d build -m \"Updated the nightly\"",
    "test": "cypress run",
    "test-unit": "jest",
    "test-unit-prepare": "tsc --module commonjs --target es2017",
    "test-unit-prepare-watch": "tsc --watch --module commonjs --target es2017",
    "eject": "react-scripts-ts eject",
    "riw:prepare": "rm -r tmp/transpiled/; tsc -p . --target ES6 --module esnext --jsx preserve --outDir tmp/transpiled",
    "riw:translate": "riw app translate",
    "riw:status": "riw app status",
    "tsc": "tsc --project tsconfig.prod.json --noEmit",
    "tslint": "npx tslint --fix --project tslint.prod.json 'src/**/*.{ts,tsx}'",
    "precommit": "npm run tsc && npm run prettier && npm run tslint && npm run test-unit-prepare && npm run test-unit",
    "prettier": "prettier src/**.{ts,tsx} --write"
  },
  "pre-commit": [
    "precommit"
  ],
  "riw": {
    "defaultLocale": "en",
    "targetLocales": [
      "de",
      "es",
      "et",
      "fr",
      "it",
      "hu",
      "nl",
      "pl",
      "ro",
      "ru",
      "uk",
      "zh",
      "zh"
    ],
    "translationsDatabaseFile": "riw-db.json",
    "sourceDirs": [
      "tmp/transpiled/**/*.js",
      "tmp/transpiled/**/*.jsx"
    ],
    "reactIntlAutoConfig": false,
    "outputMode": "file-per-locale",
    "translationsOutputFile": "src/translations/locales/[locale].json",
    "todoFile": "translations-todo.json"
  },
  "devDependencies": {
    "@bahmutov/add-typescript-to-cypress": "^2.0.0",
    "@types/bip39": "^2.4.0",
    "@types/bytebuffer": "^5.0.37",
    "@types/classnames": "^2.2.6",
    "@types/jest": "^23.3.7",
    "@types/ledgerhq__hw-transport-u2f": "^4.21.0",
    "@types/lodash": "^4.14.117",
    "@types/node": "^10.12.0",
    "@types/query-string": "^6.1.1",
    "@types/react": "^16.4.18",
    "@types/react-dom": "^16.0.9",
    "@types/react-helmet": "^5.0.7",
    "@types/react-intl": "^2.3.8",
    "babel-cli": "^6.26.0",
    "babel-plugin-syntax-dynamic-import": "^6.18.0",
    "babel-preset-es2015": "^6.24.1",
    "babel-preset-react": "^6.24.1",
    "cypress": "^3.1.0",
    "gh-pages": "^2.0.1",
    "pre-commit": "^1.2.2",
    "prettier": "^1.14.3",
    "riw": "^0.8.0",
    "raf": "^3.4.0",
    "typescript": "^3.1.3"
  },
  "prettier": {
    "singleQuote": true
  },
  "jest": {
    "verbose": true,
    "testMatch": [
      "<rootDir>/build/dist/**/__tests__/**/*.js?(x)",
      "<rootDir>/build/dist/**/?(*.)+(spec|test).js?(x)"
    ],
    "testEnvironment": "jsdom",
    "setupFiles": [
      "raf/polyfill"
    ],
    "testURL": "http://localhost/"
  }
}
