{
  "name": "rise-wallet-desktop",
  "description": "Rise Wallet",
  "version": "1.0.0-beta.5",
  "author": "rise.vision",
  "engines": {
    "yarn": "^1.10.1"
  },
  "main": "src/main.js",
  "license": "GPL-3.0-only",
  "homepage": "https://wallet.rise.vision",
  "dependencies": {
    "dotenv": "^6.2.0",
    "carlo": "^0.9.43"
  },
  "scripts": {
    "build": "tsc",
    "prepare": "rm -rf build; cp -Rf ../build build; tsc",
    "set-env": "echo RELEASE=$1 > .env",
    "release:testnet": "yarn set-env testnet; pkg . --out-path=dist",
    "release:mainnet": "yarn set-env mainnet; pkg . --out-path=dist",
    "release": "yarn prepare && yarn build && yarn release:mainnet",
    "start": "yarn set-env testnet; yarn prepare; node src/main.js"
  },
  "devDependencies": {
    "pkg": "^4.3.5",
    "typescript": "^3.2.2"
  },
  "bin": {
    "rise-wallet": "./src/main.js"
  },
  "pkg": {
    "scripts": "src/**/*.js",
    "assets": "build/**/*"
  }
}
