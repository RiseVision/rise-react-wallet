{
  "name": "rise-wallet",
  "description": "Rise Wallet",
  "version": "1.0.0-beta.4",
  "author": "rise.vision",
  "engines": {
    "yarn": "^1.10.1"
  },
  "main": "src/main.js",
  "homepage": "https://wallet.rise.vision",
  "dependencies": {
    "@babel/polyfill": "^7.0.0",
    "@ledgerhq/hw-transport-node-hid": "^4.24.0",
    "babel-runtime": "^6.26.0",
    "express": "^4.16.4"
  },
  "scripts": {
    "build": "cp -Rf ../src/translations src; tsc",
    "start": "electron src/main.js",
    "postinstall": "electron-builder install-app-deps",
    "rebuild-native": "electron-rebuild --force",
    "dist": "yarn build; rm -R dist; electron-builder -mwl"
  },
  "devDependencies": {
    "@types/express": "^4.16.0",
    "@types/node": "^10.12.12",
    "electron": "^3.0.10",
    "electron-builder": "^20.38.2",
    "electron-rebuild": "^1.8.2",
    "typescript": "^3.1.3"
  },
  "build": {
    "appId": "vision.rise.wallet",
    "productName": "RISE Wallet",
    "mac": {
      "category": "public.app-category.finance"
    },
    "files": [
      "app/**/*",
      "src/**/*",
      "resources/**/*",
      "node_modules/**/*",
      "package.json"
    ],
    "directories": {
      "buildResources": "resources"
    },
    "publish": null
  }
}
