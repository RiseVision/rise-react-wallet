{
  "name": "rise-wallet-desktop",
  "description": "Rise Wallet",
  "version": "1.0.0-beta.5",
  "author": "rise.vision",
  "engines": {
    "yarn": "^1.10.1"
  },
  "main": "src/main.js",
  "license": "GPL-3.0-only",
  "homepage": "https://wallet.rise.vision",
  "dependencies": {
    "dotenv": "^6.2.0"
  },
  "scripts": {
    "build": "tsc",
    "prestuff": "rm -rf build; cp -Rf ../build build; tsc",
    "set-env": "echo RELEASE=$1 > .env",
    "bundle:testnet": "yarn set-env testnet; pkg .",
    "bundle:mainnet": "yarn set-env mainnet; pkg .",
    "bundle": "yarn prestuff && yarn build && yarn bundle:mainnet"
  },
  "devDependencies": {
    "carlo": "^0.9.43",
    "pkg": "^4.3.5",
    "typescript": "^3.2.2"
  },
  "bin": {
    "rise-wallet": "./src/main.js"
  },
  "pkg": {
    "scripts": "src/**/*.js",
    "assets": "build/**/*"
  }
}
