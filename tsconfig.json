{
  "compilerOptions": {
    "baseUrl": ".",
    "outDir": "build/dist",
    "module": "esnext",
    "target": "es5",
    "lib": ["es6", "dom", "es7", "es2017.object"],
    "sourceMap": true,
    "allowJs": true,
    "jsx": "react",
    "moduleResolution": "node",
    "rootDir": "src",
    "downlevelIteration": true,
    "suppressImplicitAnyIndexErrors": true,
//    "forceConsistentCasingInFileNames": true,
//    "noImplicitReturns": true,
//    "noImplicitThis": true,
//    "noImplicitAny": true,
//    "strictNullChecks": true,
//    "noUnusedLocals": true,
    "preserveConstEnums": true,
    "experimentalDecorators": true,
    "skipLibCheck": true
  },
  "exclude": [
    "node_modules",
    "tmp",
    "cypress",
    "build",
    "scripts",
    "acceptance-tests",
    "webpack",
    "jest",
    "src/setupTests.ts"
  ]
}
